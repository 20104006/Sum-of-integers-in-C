#include<stdio.h>
int main()
{
    while(1)
    {
        float num1,num2,add,sub,mul,div;
        printf("Enter Two Integers : ");
        scanf("%f %f",&num1,&num2);
        add = num1 + num2;
        printf("%.2f + %.2f = %.2f\n",num1,num2,add);
        sub = num1 - num2;
        printf("%.2f - %.2f = %.2f\n",num1,num2,sub);
        mul = num1 * num2;
        printf("%.2f * %.2f = %.2f\n",num1,num2,mul);
        div = num1 / num2;
        printf("%.2f / %.2f = %.2f\n",num1,num2,div);
    }
    return 0;


}
